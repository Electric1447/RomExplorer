<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText,ContentDescription,RtlHardcoded,RtlSymmetry">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:padding="4dp"
            android:src="@drawable/px400_empty" />

        <TextView
            android:id="@+id/top1"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text=" Rom"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/top2"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:paddingTop="4dp"
            android:paddingRight="3dp"
            android:paddingBottom="4dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/rom_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Version"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/top3"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center"
            android:padding="4dp"
            android:text="Status"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/top4"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center"
            android:padding="4dp"
            android:text="Type"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/top5"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center"
            android:padding="4dp"
            android:text="Link"
            android:textColor="#000"
            android:textSize="17sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000">

        <ImageView
            android:id="@+id/rImage"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="LineageOS"
            android:textColor="#000"
            android:textSize="18sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center"
            android:padding="4dp"
            android:text="7.1.2"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center"
            android:padding="4dp"
            android:text="Stable"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFF"
            android:gravity="center"
            android:padding="4dp"
            android:text="Offical"
            android:textColor="#000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:padding="4dp"
            android:text="@string/link_here"
            android:textColor="#3F51B5"
            android:textSize="17sp"
            android:textStyle="italic" />

    </TableRow>

</TableLayout>